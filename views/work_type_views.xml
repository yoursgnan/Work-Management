<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Tree View for Work Type -->
        <record id="view_work_type_tree" model="ir.ui.view">
            <field name="name">work.type.tree</field>
            <field name="model">work.type</field>
            <field name="arch" type="xml">
                <tree string="Work Type">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Work Type -->
        <record id="view_work_type_form" model="ir.ui.view">
            <field name="name">work.type.form</field>
            <field name="model">work.type</field>
            <field name="arch" type="xml">
                <form string="Work Type">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
